<% include layout.ejs %>
<div class="banner">
        <div class="banner-inner">
        <% if (user) { %>
            <h3>Hi, <%=user.name%></h3>
        <% }%>
            <p>请把你本周的工作情况告诉我吧！</p>
        </div>
</div>

<div class="container-fluid ">
  <div class="section">
  <% if (user) { %>
	  <form method="post" action="/submit" >
	  <div class="row">
		<div class="col-md-4">
		  <h4>年级</h4>
		  <select name="grade" class="form-control">
		  	<option><%=user.grade%></option>
		  </select>
		</div>
		<div class="col-md-4">
		  <h4>姓名</h4>
		  <select name="name" class="form-control">
			<option><%=user.name%></option>
		  </select>
		</div>
		<div class="col-md-4">
		  <h4>汇报时间</h4>
		  <select name="time" class="form-control">
            <option >140519-140526</option>
		  </select>
		</div>
	  </div>
	  <div class="row">
		<div class="col-md-12">
		  <hr/>
		</div>
	  </div>
	  <div class="row">   
		<div class="col-md-6">
		  <h4>工作任务</h4>
		  <textarea name="task" rows="5" placeholder="这周你都干了什么？" class="form-control"></textarea>
		  <hr/>
		</div>
		<div class="col-md-6">
		  <h4>完成情况</h4>
		  <textarea name="complete" rows="5" placeholder="完成的怎么样了？" class="form-control"></textarea>
		  <hr/>
		</div>
		<div class="col-md-6">
		  <h4>存在问题说明</h4>
		  <textarea name="issue" rows="5" placeholder="遇到了什么问题？" class="form-control"></textarea>
		  <hr/>
		</div>
		<div class="col-md-6">
		  <h4>总体进展情况</h4>
		  <textarea name="progress" rows="5" placeholder="总体进展情况如何？" class="form-control"></textarea>
		  <hr/>
		</div>
		<div class="col-md-6">
		  <h4>下次计划</h4>
		  <textarea name="plan" rows="5" placeholder="下次计划？" class="form-control"></textarea>
		  <hr/>
		</div>
		
	  </div>
	  <div class="row">   
	  <div class="col-md-offset-5 col-md-2">
		  <button type="submit" class="btn btn-primary btn-lg btn-block">提交汇报</button>
	  </div>
	  </div>
  </form>
  <% } else { %>
	<script type="text/javascript">
	$('#Signin').modal()
	</script>
  <% } %>
  </div>
</div>


<% include inc/footer.ejs %>