<% include layout.ejs %>

<div class="col-md-offset-2 container">

  <h3>亲爱的HINOCer，</h3>
  <h4>请把你们本周的工作情况告诉我吧！</h4>
  <div class="row">
    <div class="col-md-10">
      <hr>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <h4>年级</h4>
      <select id="grade" class="form-control">
        <option>研二 2012级</option>
        <option>研一 2013级</option>
        <option>大四 2014级</option>
      </select>
    </div>
    <div class="col-md-2">
      <h4>姓名</h4>
      <select id="name" class="form-control">
        <option>狄Dog</option>
        <option>才Dog</option>
        <option>雪Dog</option>
      </select>
    </div>
    <div class="col-md-2">
      <h4>汇报时间</h4>
      <select id="time" class="form-control">
        <option>第一周</option>
        <option>第二周</option>
        <option>第三周</option>
        <option>第四周</option>
        <option>第五周</option>
      </select>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10">
      <hr/>
    </div>
  </div>
  <div class="row">   
    <div class="col-md-5">
      <h4>工作任务</h4>
      <textarea id="task" rows="5" placeholder="这周你都干了什么？" class="form-control"></textarea>
      <hr/>
    </div>
    <div class="col-md-5">
      <h4>完成情况</h4>
      <textarea id="complete" rows="5" placeholder="完成的怎么样了？" class="form-control"></textarea>
      <hr/>
    </div>
    <div class="col-md-5">
      <h4>存在问题说明</h4>
      <textarea id="issue" rows="5" placeholder="遇到了什么问题？" class="form-control"></textarea>
      <hr/>
    </div>
    <div class="col-md-5">
      <h4>总体进展情况</h4>
      <textarea id="all" rows="5" placeholder="总体进展情况如何？" class="form-control"></textarea>
      <hr/>
    </div>
    <div class="col-md-offset-4 col-md-2">
      <button id="submit" type="button" class="btn btn-primary btn-lg btn-block">提交汇报</button>
    </div>
  </div>
</div>

<% include inc/footer.ejs %>